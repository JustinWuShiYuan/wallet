<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyPersonInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/title_bar2"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorGray"/>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"
            android:id="@+id/civ_user_head_src"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite"/>


        <!--ID 开始 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="26dp"
            android:layout_height="35dp"
            android:id="@+id/rl_my_id"
            >

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:layout_marginLeft="10dp"
                style="@style/text_style_17sp_black1"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="235345"
                style="@style/text_style_15sp_gray_6"
                android:id="@+id/tv_my_id"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            android:layout_marginLeft="26dp"/>
        <!--ID 结束 -->


        <!--昵称 开始 -->
        <RelativeLayout
            android:layout_marginTop="@dimen/rc_dimen_size_5"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="26dp"
            android:layout_height="45dp"
            android:id="@+id/rl_my_nick_name"
            >

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_marginLeft="10dp"
                style="@style/text_style_17sp_black1"
                android:id="@+id/tv_nick"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_nick"
                android:layout_marginLeft="10dp"
                style="@style/text_style_15sp_gray_12"
                android:text="(点击修改)"/>



            <EditText
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="曲阳"
                android:id="@+id/tv_my_nick_name"
                android:background="@null"
                style="@style/text_style_15sp_gray_6"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            android:layout_marginLeft="26dp"/>
        <!--昵称 结束 -->



        <!--用户名 开始 -->
        <RelativeLayout
            android:layout_marginTop="@dimen/rc_dimen_size_5"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="26dp"
            android:layout_height="45dp"
            android:id="@+id/rl_my_user_name"
            >

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:layout_marginLeft="10dp"
                style="@style/text_style_17sp_black1"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="MXDKFJDLI"
                style="@style/text_style_15sp_gray_6"
                android:id="@+id/tv_my_user_name"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            android:layout_marginLeft="26dp"/>
        <!--用户名 结束 -->




    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_dimen_size_50"
        android:layout_marginLeft="@dimen/rc_dimen_size_24"
        android:layout_marginRight="@dimen/rc_dimen_size_24"
        android:textColor="@color/colorWhite"
        android:text="退出登录"
        android:background="@drawable/shape_blue_bg"
        android:id="@+id/tv_exit_login"
        />

</RelativeLayout>
