<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:id="@+id/rl_my_info">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:id="@+id/civ_user_head_src"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@id/civ_user_head_src"
            android:layout_alignTop="@id/civ_user_head_src"
            style="@style/text_style_20sp_gray_3"
            android:text="JustinAndXiaoHan"
            android:id="@+id/tv_user_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_alignBottom="@id/civ_user_head_src"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@id/civ_user_head_src"
            style="@style/text_style_13sp_gray_6"
            android:text="ID:352214325"
            android:id="@+id/tv_user_id"/>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray"/>


    <!--我的资产 开始 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="55dp"
        android:id="@+id/rl_my_property"
       >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/rc_dimen_size_24"
            android:layout_height="@dimen/rc_dimen_size_24"
            android:src="@drawable/icon_user_property"
            android:id="@+id/iv_my_asset"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的资产"
            android:layout_toRightOf="@id/iv_my_asset"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>


    </RelativeLayout>
    <!--我的资产 结束 -->


    <!--我的收款账号 开始 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="55dp"
        android:id="@+id/rl_my_account"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/rc_dimen_size_24"
            android:layout_height="@dimen/rc_dimen_size_24"
            android:src="@drawable/icon_user_account"
            android:id="@+id/iv_get_money_account"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收款账号"
            android:layout_toRightOf="@id/iv_get_money_account"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>
    <!--我的收款账号 结束 -->


    <!--我的订单 开始 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="55dp"
        android:id="@+id/rl_my_orders"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/rc_dimen_size_24"
            android:layout_height="@dimen/rc_dimen_size_24"
            android:src="@drawable/icon_user_order"
            android:id="@+id/iv_my_order"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:layout_toRightOf="@id/iv_my_order"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>
    <!--我的订单 结束 -->


    <!--我的广告 开始 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="55dp"
        android:id="@+id/rl_my_advertising"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/rc_dimen_size_24"
            android:layout_height="@dimen/rc_dimen_size_24"
            android:src="@drawable/icon_user_ad"
            android:id="@+id/iv_my_advertising"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的广告"
            android:layout_toRightOf="@id/iv_my_advertising"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>
    <!--我的广告 结束 -->


    <!--安全设置 开始 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="55dp"
        android:id="@+id/rl_safe_setting"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/rc_dimen_size_24"
            android:layout_height="@dimen/rc_dimen_size_24"
            android:src="@drawable/icon_safe_setting"
            android:id="@+id/iv_safe_setting"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全设置"
            android:layout_toRightOf="@id/iv_safe_setting"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>
    <!--安全设置 结束 -->


    <!--关于我们 开始 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="55dp"
        android:id="@+id/rl_about_us"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/rc_dimen_size_24"
            android:layout_height="@dimen/rc_dimen_size_24"
            android:src="@drawable/icon_user_about"
            android:id="@+id/iv_about_us"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:layout_toRightOf="@id/iv_about_us"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>
    <!--关于我们 结束 -->

</LinearLayout>
