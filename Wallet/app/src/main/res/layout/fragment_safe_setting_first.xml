<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F1F6"
    >


    <TextView
       android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_style_20sp_blue5"
        android:text="为了您的资金安全，请设置"
        android:layout_marginLeft="26dp"
        android:id="@+id/rv_des"
        />



    <EditText
        android:layout_below="@id/rv_des"
        android:id="@+id/et_fund_pwd"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_dimen_size_50"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:paddingStart="20dp"
        android:hint="资金密码"
        style="@style/text_style_15sp_gray_6"
        android:background="@drawable/shape_white2_bg"
        android:inputType="numberPassword"/>


    <EditText
        android:layout_below="@id/et_fund_pwd"
        android:id="@+id/et_sure_pwd"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_dimen_size_50"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:paddingStart="20dp"
        android:hint="确认密码"
        style="@style/text_style_15sp_gray_6"
        android:background="@drawable/shape_white2_bg"
        android:inputType="numberPassword"/>




    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:textColor="@color/white1"
        android:textSize="15sp"
        android:text="确认设置"
        android:background="@drawable/shape_blue_bg"
        android:id="@+id/tv_sure_setting"/>


</RelativeLayout>
