<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:id="@+id/civ_user_head_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorWhite"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/civ_user_head_icon"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_16sp_gray_3"
            android:text="小涵"
            android:id="@+id/tv_user_name"/>


        <TextView
            android:layout_marginTop="2dp"
            android:layout_below="@id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_12sp_gray_3"
            android:text="dfasdffffffffffffffff"
            android:id="@+id/tv_message_info"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:gravity="center_vertical"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_12sp_gray_3"
            android:layout_alignParentRight="true"
            android:text="2018.10.12 12:32"
            android:id="@+id/tv_message_time"/>


        <ImageView
            android:layout_marginTop="@dimen/rc_dimen_size_5"
            android:layout_below="@id/tv_message_time"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"
            android:id="@+id/iv_right_arrow"/>


        <TextView
            android:id="@+id/tv_message_count"
            android:layout_marginTop="@dimen/rc_dimen_size_5"
            android:layout_below="@id/tv_message_time"
            android:layout_marginRight="@dimen/rc_dimen_size_5"
            android:layout_toLeftOf="@id/iv_right_arrow"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/shape_circle_blue_bg"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="15"/>


    </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F6F5FA"
        android:id="@+id/line5"
        />



</RelativeLayout>
