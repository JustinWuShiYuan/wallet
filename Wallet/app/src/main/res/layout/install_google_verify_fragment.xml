<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F1F6"
    >


    <!--安装谷歌验证器 第一部分 开始 -->
    <LinearLayout
        android:background="@color/white1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_first_step">


        <ImageView
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/logo_google"/>


        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_blue3"
            android:text="首先，您需要在您的手机上安装一个谷歌"
            android:layout_marginTop="30dp"
            />




        <RelativeLayout
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_17sp_blue3"
                android:text="验证器（ "
                android:id="@+id/tv_2"
                />


            <TextView
                android:layout_toRightOf="@id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_17sp_yellow"
                android:id="@+id/tv_3"
                android:text="Google Authenticator"/>


            <TextView
                android:layout_toRightOf="@id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_17sp_blue3"
                android:text=" )"
                />



        </RelativeLayout>





    </LinearLayout>


    <!--安装谷歌验证器 第一部分 结束 -->




    <!--安装谷歌验证器 第二部分 开始 -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_second_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text_des"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_blue3"
            android:text="最好将16位密钥记录在纸上，并保存在安全的地方。如遇手机丢失，你可以通过该密钥恢复你的谷歌验证"
            android:lines="3"
            android:lineSpacingExtra="@dimen/rc_dimen_size_5"/>



        <RelativeLayout
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rc_dimen_size_50"
            android:background="@drawable/shape_white2_bg">


            <EditText
                android:paddingStart="20dp"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/et_input_google_verify_code"
                android:text="21352435"
                android:gravity="left|center"
                style="@style/text_style_13sp_black1"
                />



            <RelativeLayout
                android:id="@+id/rl_copy_google_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10">


                <ImageView
                    android:id="@+id/iv_copy_icon"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_copy"/>


                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_marginLeft="@dimen/rc_dimen_size_5"
                    android:paddingEnd="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/text_style_13sp_black1"
                    android:text="复制"
                    android:layout_toRightOf="@id/iv_copy_icon"
                    />


            </RelativeLayout>




        </RelativeLayout>



    </LinearLayout>

    <!--安装谷歌验证器 第二部分 结束 -->




    <!--安装谷歌验证器 第三部分 开始 -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_third_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text_des1"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_blue3"
            android:text="请输入您刚才备份的16位密钥"
            android:lineSpacingExtra="@dimen/rc_dimen_size_5"/>



        <EditText
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_height="@dimen/rc_dimen_size_50"
            android:background="@drawable/shape_white2_bg"
            android:id="@+id/et_input_google_verify_code_again"
            android:gravity="left|center"
            style="@style/text_style_13sp_black1"
            />

    </LinearLayout>

    <!--安装谷歌验证器 第三部分 结束 -->




    <!--安装谷歌验证器 第四部分 开始 -->

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_fourth_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text_des2"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_blue3"
            android:text="您需要在谷歌验证起 APP 中添加一个AB Pay 账户，并手动输入16位密钥。"
            android:lines="2"
            android:lineSpacingExtra="@dimen/rc_dimen_size_5"/>


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="312dp"
            android:layout_height="357dp"
            android:src="@drawable/img_ga"/>




    </LinearLayout>


    <!--安装谷歌验证器 第四部分 结束 -->



    <!--安装谷歌验证器 第五部分 开始 -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_complete_google_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_login_pwd">

            <TextView
                android:id="@+id/tv_login_pwd"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_style_17sp_blue3"
                android:gravity="left|center"
                android:text="登录密码"/>


            <EditText
                android:paddingStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/tv_login_pwd"
                android:id="@+id/et_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_white2_bg"
                android:hint="您的 AB Pay 的登录密码"
                style="@style/text_style_15sp_gray_6"/>



        </RelativeLayout>




        <RelativeLayout
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_google_pwd">

            <TextView
                android:id="@+id/tv_google_pwd"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_style_17sp_blue3"
                android:gravity="left|center"
                android:text="谷歌验证码"/>


            <EditText
                android:paddingStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/tv_google_pwd"
                android:id="@+id/et_google_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_white2_bg"
                android:hint="6位数字"
                style="@style/text_style_15sp_gray_6"/>



        </RelativeLayout>


    </LinearLayout>


    <!--安装谷歌验证器 第五部分 结束 -->



    <!--安装谷歌验证器 第六部分 开始 -->

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_verify_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_setting_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/unbind_success"/>


        <TextView
            android:id="@+id/tv_back"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rc_dimen_size_50"
            android:textColor="@color/white1"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="返回"
            android:background="@drawable/shape_blue_bg"/>

    </LinearLayout>

    <!--安装谷歌验证器 第六部分 结束 -->


    <TextView
        android:id="@+id/tv_next_step"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:textColor="@color/white1"
        android:textSize="15sp"
        android:background="@drawable/shape_blue_bg"
        android:gravity="center"
        android:text="下一步"
        />


</RelativeLayout>
