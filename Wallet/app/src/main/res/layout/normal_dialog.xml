<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    >

    <RelativeLayout
        android:background="@drawable/shape_white_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_black1"
            android:text="删除支付宝"/>


        <View
            android:id="@+id/line1"
            android:layout_below="@id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_10"/>


        <TextView
            android:layout_below="@id/line1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:gravity="left"
            android:lineSpacingExtra="5dp"
            style="@style/text_style_15sp_gray_3"
            android:text="@string/delete_des"/>


        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rc_dimen_size_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10">


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shape_blue1_bg"
                android:text="取消"
                style="@style/text_style_16sp_blue"/>



            <TextView
                android:id="@+id/tv_sure"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shape_blue_bg"
                android:text="确定"
                android:textColor="@color/white1"
                style="@style/text_style_16sp_blue"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

