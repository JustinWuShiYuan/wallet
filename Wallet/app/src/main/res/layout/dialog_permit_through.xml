<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <TextView
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_style_17sp_black1"
        android:text="放行订单"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8E9ED"/>


    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        style="@style/text_style_15sp_gray_6"
        android:text="请确认已收到买方的付款，放行后自动向对方划转 654788 AB 币"
        android:lineSpacingExtra="@dimen/rc_dimen_size_5"
        />


    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_style_15sp_gray_6"
        android:text="买方信息:"
        />


    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F2F1F6">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_14sp_gray_8"
                android:text="付款方式:"
                android:id="@+id/tv_payment_des"/>


            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_marginLeft="@dimen/rc_dimen_size_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_payment_des"
                style="@style/text_style_14sp_blue"
                android:text="支付宝"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_14sp_gray_8"
                android:text="付款金额:"
                android:id="@+id/tv_pay_money_des"/>


            <TextView
                android:id="@+id/tv_payed_money"
                android:layout_marginLeft="@dimen/rc_dimen_size_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_pay_money_des"
                style="@style/text_style_14sp_blue"
                android:text="3875元"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_14sp_gray_8"
                android:text="付款参考码:"
                android:id="@+id/tv_pay_reference_code_des"/>


            <TextView
                android:id="@+id/tv_pay_reference_code"
                android:layout_marginLeft="@dimen/rc_dimen_size_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_pay_reference_code_des"
                style="@style/text_style_14sp_blue"
                android:text="55754121"
                />


        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/rc_dimen_size_24"
        android:layout_marginRight="@dimen/rc_dimen_size_24"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            style="@style/text_style_16sp_blue"
            android:background="@drawable/shape_blue1_bg"/>



        <TextView
            android:id="@+id/tv_sure_green_light"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认放行"
            style="@style/text_style_16sp_blue"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_blue_bg"/>



    </LinearLayout>



</LinearLayout>
