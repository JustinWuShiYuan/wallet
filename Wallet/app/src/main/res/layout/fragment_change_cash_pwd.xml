<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#E8E9ED" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp">

            <TextView

                android:id="@+id/tv_new_pwd_des"
                style="@style/text_style_17sp_black1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="新的资金密码" />


            <EditText
                android:id="@+id/et_input_new_cash_pwd"
                style="@style/text_style_15sp_gray_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_new_pwd_des"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="请输入资金密码" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/et_input_new_cash_pwd"
                android:layout_marginTop="2dp"
                android:background="#E8E9ED" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp">

            <TextView

                android:id="@+id/tv_sure_pwd_des"
                style="@style/text_style_17sp_black1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="确认资金密码" />


            <EditText
                android:id="@+id/et_input_new_cash_pwd_again"
                style="@style/text_style_15sp_gray_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sure_pwd_des"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="再次输入资金密码" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/et_input_new_cash_pwd_again"
                android:layout_marginTop="2dp"
                android:background="#E8E9ED" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp">

            <TextView

                android:id="@+id/tv_google_code_des"
                style="@style/text_style_17sp_black1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="确认资金密码" />


            <EditText
                android:id="@+id/et_input_google_pwd"
                style="@style/text_style_15sp_gray_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_google_code_des"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="请输入谷歌验证码" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/et_input_google_pwd"
                android:layout_marginTop="2dp"
                android:background="#E8E9ED" />


        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_sure_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_blue_bg"
        android:gravity="center"
        android:text="确认设置"
        android:textColor="@color/white1"
        android:textSize="15sp" />
</RelativeLayout>

