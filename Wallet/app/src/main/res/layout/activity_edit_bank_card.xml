<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditBankCardActivity"
    android:orientation="vertical">

    <include layout="@layout/title_bar2"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_black1"
            android:gravity="left"
            android:text="姓名"
            android:id="@+id/tv_name_des"/>


        <EditText
            android:layout_below="@id/tv_name_des"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入姓名"
            android:id="@+id/et_input_name"
            style="@style/text_style_15sp_gray_6"/>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_input_bank"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_black1"
            android:gravity="left"
            android:text="开户银行"/>


        <EditText
            android:layout_below="@id/tv_input_bank"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入开户银行"
            android:id="@+id/et_input_bank_type"
            style="@style/text_style_15sp_gray_6"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_input_bank_branch"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_black1"
            android:gravity="left"
            android:text="开户支行"/>


        <EditText
            android:layout_below="@id/tv_input_bank_branch"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入开户支行"
            android:id="@+id/et_input_bank_type_branch"
            style="@style/text_style_15sp_gray_6"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_input_card_num"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_black1"
            android:gravity="left"
            android:text="银行卡号"/>


        <EditText
            android:layout_below="@id/tv_input_card_num"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入银行卡号"
            android:id="@+id/et_input_bank_num"
            style="@style/text_style_15sp_gray_6"/>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_input_num_again"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_black1"
            android:gravity="left"
            android:text="确认卡号"/>


        <EditText
            android:layout_below="@id/tv_input_num_again"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入银行卡号"
            android:id="@+id/et_input_bank_num_again"
            style="@style/text_style_15sp_gray_6"/>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_cash_pwd"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style_17sp_black1"
            android:gravity="left"
            android:text="资金密码"/>


        <EditText
            android:layout_below="@id/tv_cash_pwd"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入资金密码"
            android:id="@+id/et_input_bank_pwd"
            style="@style/text_style_15sp_gray_6"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_circle_blue_bg"
            android:text="下一步"/>
    </RelativeLayout>





</LinearLayout>