<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditZFBOrWechatCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar2"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            style="@style/text_style_17sp_black1"
            android:gravity="left"
            android:text="上传您的收款二维码"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="128dp">


            <ImageView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_gray_bg"
                android:scaleType="fitXY"
                android:id="@+id/iv_display_qr_code"
                />


            <ImageView
                android:id="@+id/iv_add_qr_code"
                android:layout_marginTop="15dp"
                android:layout_width="@dimen/rc_dimen_size_50"
                android:layout_height="@dimen/rc_dimen_size_50"
                android:layout_gravity="center"
                android:src="@drawable/icon_add"/>

        </FrameLayout>



        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            >


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_style_17sp_black1"
                android:gravity="left"
                android:text="姓名"
                android:id="@+id/tv_name_des"/>


            <EditText
                android:layout_below="@id/tv_name_des"
                android:layout_marginLeft="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入姓名"
                android:id="@+id/et_input_name"
                style="@style/text_style_15sp_gray_6"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_style_17sp_black1"
                android:gravity="left"
                android:text="微信账户"
                android:id="@+id/tv_account_type"/>


            <EditText
                android:layout_below="@id/tv_account_type"
                android:layout_marginLeft="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入账户"
                android:id="@+id/et_input_account"
                style="@style/text_style_15sp_gray_6"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_style_17sp_black1"
                android:gravity="left"
                android:text="资金密码"
                android:id="@+id/tv_account_pwd"/>


            <EditText
                android:layout_below="@id/tv_account_pwd"
                android:layout_marginLeft="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入资金密码"
                android:id="@+id/et_input_account_pwd"
                android:inputType="textPassword"
                style="@style/text_style_15sp_gray_6"/>


        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_next_step"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shape_circle_blue_bg"
        android:text="下一步"/>

</RelativeLayout>